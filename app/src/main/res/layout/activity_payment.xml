<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@color/appBackground"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Options"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_black"
                android:textSize="18dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_amount_textview"
                android:text="To Pay : â‚¹0.00"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay by UPI"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:padding="10dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay by any UPI App"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="25dp"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/gpayy"
                            android:onClick="payWithGpay"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gpay"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="25dp"
                        >

                        <ImageView
                            android:id="@+id/phonePayImg"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/phonepe"
                            android:onClick="payWithPhonepe"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phonepe"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="25dp"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/paytm"
                            android:onClick="payWithPaytm"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paytm"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            />

                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/btn_add_upi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add new UPI Id"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_black"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cards"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:padding="10dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/credit"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Credit/ Debit Cards"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_black"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:padding="10dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cash On Delivery(COD)"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_black"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pluxee"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:padding="10dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/pluxee"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pluxee"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_black"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</ScrollView>